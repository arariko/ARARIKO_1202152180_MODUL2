<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.arariko.arariko_1202152180_modul2.TakeAway">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Identitas Pemesan:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Name"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="180dp"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Phone" />
    <EditText
        android:id="@+id/alamat"
        android:layout_width="180dp"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Alamat" />
    <EditText
        android:id="@+id/Catatan"
        android:layout_width="180dp"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Catatan"
        />
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="Chose The Time and The Date:"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:onClick="showDatePickerDialog"
            android:text="Date" />

        <Button
            android:id="@+id/button_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_date"
            android:layout_toEndOf="@+id/button_date"
            android:layout_toRightOf="@+id/button_date"
            android:onClick="showTimePickerDialog"
            android:text="Time"
            />

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILIH PESANAN"
        android:layout_gravity="center"
       android:layout_marginTop="10dp"
        android:onClick="showPesanan"
        />
</LinearLayout>
